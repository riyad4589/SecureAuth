    {
      "name": "API Keys",
      "description": "Gestion des clés API pour l'accès programmatique",
      "item": [
        {
          "name": "Create API Key",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.key) {",
                  "        pm.collectionVariables.set('apiKey', jsonData.data.key);",
                  "        console.log('API Key saved! Store it securely.');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Mon Script de Test\",\n  \"expiresInDays\": 30\n}",
              "options": {
                "raw": {
